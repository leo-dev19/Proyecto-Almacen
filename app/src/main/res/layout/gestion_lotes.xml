<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8E24AA">

    <!-- Encabezado -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestión de Lotes"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <!-- Contenido -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLayout"
        android:background="@drawable/header_lotes"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Sección de Registro -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registrar Lote"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:paddingTop="6dp"
                android:layout_marginBottom="6dp"/>

            <!-- Campos -->
            <EditText
                android:id="@+id/etIdLote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ID del Lote"
                android:background="@drawable/campos_lotes"
                android:minHeight="50dp"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etFechaRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fecha de Registro"
                android:inputType="date"
                android:background="@drawable/campos_lotes"
                android:minHeight="50dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de Lote"
                android:textColor="#000000"
                android:layout_marginBottom="6dp"/>

            <Spinner
                android:id="@+id/spTipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/tipo_lote"
                android:background="@drawable/spinner_lotes"
                android:minHeight="50dp"
                android:layout_marginBottom="8dp"/>

            <CheckBox
                android:id="@+id/cbFragil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Es frágil?"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etIdDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ID Detalle"
                android:background="@drawable/campos_lotes"
                android:minHeight="50dp"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etStock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Stock"
                android:inputType="number"
                android:background="@drawable/campos_lotes"
                android:minHeight="50dp"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etFechaVencimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fecha de Vencimiento"
                android:inputType="date"
                android:background="@drawable/campos_lotes"
                android:minHeight="50dp"
                android:layout_marginBottom="8dp"/>

            <!-- Lista -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lotes Registrados"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="16dp"
                android:layout_marginBottom="6dp"
                android:textColor="#000000"/>

            <ListView
                android:id="@+id/listViewLotes"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#FFFFFF"
                android:layout_marginBottom="16dp"/>

            <!-- Botones Guardar y Cancelar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnGuardar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guardar"
                    android:backgroundTint="#8E24AA"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btnCancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancelar"
                    android:backgroundTint="#8E24AA"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
