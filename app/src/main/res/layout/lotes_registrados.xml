<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8E24AA">

    <!-- Encabezado -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lotes Registrados"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <!-- Contenedor blanco -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLayout"
        android:background="@drawable/header_lotes"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Barra de búsqueda -->
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/campos_lotes"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">


        <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@android:drawable/ic_menu_search"
                app:tint="#8E24AA"
                android:layout_marginEnd="8dp" />
            <EditText
                android:id="@+id/etBuscar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Buscar lote"
                android:background="@android:color/transparent"
                android:textColor="#000000"
                android:textSize="16sp"
                android:padding="10dp"
                android:paddingVertical="12dp"
                android:minHeight="48dp"
                android:inputType="text" />
        </LinearLayout>

        <!-- Lista de Lotes -->
        <ListView
            android:id="@+id/listViewLotesRegistrados"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Botón Regresar -->
        <Button
            android:id="@+id/btnRegresar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regresar"
            android:backgroundTint="#8E24AA"
            android:textColor="#FFFFFF"
            android:layout_marginTop="12dp" />
    </LinearLayout>
</RelativeLayout>
